<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile.AboutUsctivity">

    <TextView
        android:id="@+id/AboutUs_Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/black"
        android:padding="10dp"
        android:text="About Us"
        android:textColor="@color/brown"
        android:textSize="50dp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/frame_layout">

        <ImageView
            android:id="@+id/about_us_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/group_image"
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:contentDescription="@null" />

    </FrameLayout>

    <TextView
        android:id="@+id/homeMateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introducing HomeMate"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/homeMateDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aboutus_intro"
        android:textSize="16sp"
        android:padding="16dp"/>


</LinearLayout>